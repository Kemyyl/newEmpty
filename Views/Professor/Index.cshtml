@model IEnumerable<Professor>
@{

     <html>
    <head>
        <title>Index</title>
    </head>

    <body>
        
        <h1>Liste des professeurs</h1>

        <table class="table table-dark table-striped-columns">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Matiere </th>
                <th>Details </th>
                <th>Edit </th>
                <th>Delete </th>
            </tr>
            @foreach (var professor in Model)
            {
                <tr>
                    <td>@professor.ProfessorId</td>
                    <td>@professor.LastName</td>
                    <td>@professor.FirstName</td>
                    <td>@professor.Matiere</td>
                    <TD><a asp-action="ShowDetailsProf" asp-route-id="@professor.ProfessorId" class="btn btn-primary">Détail</a></TD>
                    <TD><a asp-action="Edit" asp-route-id="@professor.ProfessorId" > <i class="bi bi-pencil-fill"></i></a> </TD>
                    <TD><a asp-action="Delete" asp-route-id="@professor.ProfessorId" > <i class="bi bi-trash3-fill"></i></a> </TD>
                </tr>
                
            }
        </table>
        <a asp-action="CreateProfessor" class="btn btn-primary">Create new Professor</a>
        


    </body>

    </html>
}
