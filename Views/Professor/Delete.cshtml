@model Professor

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Professor</title>
</head>

<body>
    <h1>Are you sure you want to delete this Professor?</h1>
        <form asp-action="DeleteConfirmed" method="post" onsubmit="return confirmDelete();">
            <input asp-for="ProfessorId" type="hidden" />
            <label asp-for="FirstName"></label> <input asp-for="FirstName" /> <br>

            <label asp-for="LastName"></label> <input asp-for="LastName" /> <br>

            <label asp-for="Matiere"></label> <input asp-for="Matiere" /> <br>

            <input type="submit" value="Delete, Yes!" class="btn btn-danger" />
            <input type="button" onclick="history.back()" value="Naaah, don't" class="btn btn-secondary" />
        </form>

        <script>
            function confirmDelete() {
                return confirm("Are you sure you want to delete this Professor?");
            }
        </script>

</body>

</html>