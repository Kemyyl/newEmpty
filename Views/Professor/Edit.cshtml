@model Professor

<!DOCTYPE html>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit</title>
</head>

<body>

    <h1>Edit an Professor profile</h1>

    <form asp-action="Edit" asp-controller="Professor" method="post">

        <input asp-for="ProfessorId" type="hidden" />

        <div class="form-group">
            <label asp-for="FirstName"></label> <input asp-for="FirstName" />
            @* ajout de message d'erreur de validation inline pour chaque propriete individuellement *@
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName"></label> <input asp-for="LastName" />
            @* ajout de message d'erreur de validation inline pour chaque propriete individuellement *@
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>



        <div class="form-group">
            <label asp-for="Matiere"></label> <input asp-for="Matiere" />
            @* ajout de message d'erreur de validation inline pour chaque propriete individuellement *@
            <span asp-validation-for="Matiere" class="text-danger"></span>
        </div>

        <br />
        <br />

        <input type="submit" value="Save changes" class="btn btn-primary" />
        <input type="button" onclick="history.back()" value="Cancel" class="btn btn-secondary" />
    </form>

    @* Permet de visualiser le resume de l'ensemble des erreurs de validation, ceci est un tag helper *@
    <div asp-validation-summary="All" class="text-danger"></div>

</body>

</html>

